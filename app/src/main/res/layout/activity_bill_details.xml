<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BillDetailsActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Details"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#ADFFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Invoice:"
            android:textSize="18dp"
            />
        <TextView
            android:textColor="@color/white"
            android:id="@+id/bill_d_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#ADFFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name:"
            android:textSize="18dp"
            />
        <TextView
            android:textColor="@color/white"
            android:id="@+id/bill_d_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akash Mohapatra"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#ADFFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="18dp"
            />
        <TextView
            android:textColor="@color/white"
            android:id="@+id/bill_d_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15-09-2022"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#ADFFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount:"
            android:textSize="18dp"
            />
        <TextView
            android:textColor="@color/white"
            android:id="@+id/bill_d_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1200/-"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#ADFFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount %:"
            android:textSize="18dp"
            />
        <TextView
            android:textColor="@color/white"
            android:id="@+id/bill_d_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/biil_details_rec"/>
</LinearLayout>